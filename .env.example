# Netflix Clone Environment Variables
# Copy this file to .env and fill in your actual values

# TMDB API Configuration
TMDB_API_KEY=your_tmdb_api_key_here

# Application Configuration
NODE_ENV=production
NEXT_TELEMETRY_DISABLED=1
PORT=3000
HOSTNAME=0.0.0.0

